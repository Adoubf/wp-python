# WordPress REST API 正式环境配置
# 生产环境使用，请确保配置的安全性

# WordPress站点配置
WP_BASE_URL='your-wordpress-site-url'
WP_APP_PASSWORD='your-app-password'
WP_USERNAME='your-username'

# 或使用JWT认证（需要JWT插件支持）
# WP_JWT_TOKEN=your-production-jwt-token

# API配置
WP_TIMEOUT=30
WP_VERIFY_SSL=true

# 日志配置（正式环境）
LOG_LEVEL=INFO
# LOG_FILE=logs/wp-python-production.log
DEBUG=false